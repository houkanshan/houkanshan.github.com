mixin posts-list(posts)
  ul.posts-list
    each post in posts
      li.post-item
        a(href="/#{post.dest}/" title=post.title)
          .post-hd
            h3.title
              span= post.title
            .date= post.date
          .post-bd
            if post.cover
              +cover(post.cover)
            .abstract= post.abstract

mixin cover(cover)
  .cover
    .cover-wrapper
      img(src=cover)
      i.valign
