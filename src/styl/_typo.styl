@require '_b-type/type'

// font-family
body
  type-base()
  &, h1, h2, h3, h4, h5, h6
    font-family: 'arkyakumono', 'Avenir Next', $SansSerifFont
    font-weight: 400

// Article type
.article-content
  type-article()
  -webkit-hyphens: initial
  hyphens: initial
  font-family: 'arkyakumono', 'Avenir Next', $SansSerifFont
  font-weight: 400