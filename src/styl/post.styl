@import '_lib/arkui/mixins'

@import '_variable'
@import '_mixins'

.header-wrapper
  text-align: center
  padding: 10px

.minor-header
  height: 54px

#post-content-header
  h2
    font-size: 42px
    line-height: 2
    font-weight: $bolderWeight

#post-content
  .date
    color: #999

#post-content-footer
  margin-top: 2em
  border-top: 1px solid #ccc
  padding-top: 2em
  position: relative
  .row-half
    width: 50%
    vertical-align: top
    display: inline-block
  .next
    text-align: right
  .post-switcher
    display: block
  .prev
    margin-left: 1em
  .next
    margin-right: 1em

  h4
    font-size: 26px
  label
    display: block
    font-size: 16px
  .post-switcher:hover
    .title span
      underline(21px, 2px)

.comments-section
  margin-top: 54px
