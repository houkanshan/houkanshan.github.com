@require 'mixins'
@require 'fontface'
@require 'variable'

// Could be placed under `body`
type-base()
  // Font
  font: 18px/1.5 'arkyakumono', $SansSerifFont
  font-weight: $thinWeight

  blockquote
  i, em, figcaption
    font-family: $ItalicFont
  strong, b, dt
    font-weight: $boldWeight

  code
    font-family: $PcCodeFont
    margin: 0 .23em
  for i in 1..7
    h{i}
      font-family: 'arkyakumono', $SansSerifFont
      font-weight: $thinWeight
      a
        text-decoration: none
  .underline
    underline()

  // Type
  color: rgba(0, 0, 0, 0.8)
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  pre code
    margin: 0
  a
    text-decoration: none
    color: #000

// Could be placed under `article`
type-article()
  line-height: 2.0
  font-family: 'arkyakumono', $SerifFont
  hyphens(auto)
  p, pre, ul, ol, li, blockquote, table
    margin-bottom: 1em
  for i in 1..7
    h{i}
      margin-bottom: .23em
      margin-top: 1.23em
  a
    font-family: $ItalicFont
    underline()
  a
    opacity: .75
    &:hover
    &:active
      opacity: 1
  em
  i
    margin: 0 .23em
  hr
    margin: 100px
    border: none
    border-bottom: 1px solid #ccc

  for i in 1..7
    h{i}
      font-weight: $bolderWeight
      a
        font-family: $SansSerifFont
  h1
    font-size: 24px
    a
      underline(23px, 2px)
  h2
    font-size: 22px
  h3
    font-size: 20px
  ul
    list-style: circle
  ol
    list-style: decimal
  ul, ol
    list-style-position: outside
    margin-left: 2em
  blockquote
    border-left: 3px solid #eee
    padding-left: 1em
    padding-top: 1em
    overflow-x: auto
  pre
    background: #f5f5f5
    padding: 0.8em 1.2em
    line-height: 1.5
    overflow-x: auto
  img, iframe
    display: block
    max-width: 100%
    margin: 0 auto
  figcaption
    text-align: center
    font-size: 14px
    margin-top: 10px
    font-family: $ItalicFont

  // table
  table
    margin-left: auto
    margin-right: auto
    min-width: 60%
    td, th
      padding: 0 0.3em
    thead, th
      font-weight: $boldWeight
    thead
      border-bottom: 1px solid #ddd
